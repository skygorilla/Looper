{
  "manifest_version": 3,
  "name": "Looper",
  "version": "1.0",
  "description": "A browser extension to automate UI tasks.",
  "permissions": [
    "activeTab",
    "storage",
    "scripting"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "action": {
    "default_title": "Activate Looper"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "background": {
    "service_worker": "background.js"
  },
  "options_page": "options.html",
  "content_scripts": [],
  "web_accessible_resources": [
    {
      "resources": [
        "dist/main.js",
        "dist/main.css"
      ],
      "matches": [
        "<all_urls>"
      ]
    }
  ]
}
